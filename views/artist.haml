%html
	%head
		%title= locals[:model].artist_name
		%link{:type => "text/css", :href=>"/stylesheets/screen.css",:rel=>"stylesheet"}
		%link{:type => "text/css", :href=>"/stylesheets/print.css",:rel=>"stylesheet"}
		/[if IE]
		%link{:type => "text/css", :href=>"/stylesheets/ie.css",:rel=>"stylesheet"}

	%body
		= haml(:'partials/login_partial',:layout=>false, :locals => {:model => locals[:model]})
		= haml(:'partials/basket_partial',:layout=>false, :locals => {:model => locals[:model]})
		= haml(:'partials/search_partial',:layout=>false, :locals => {:model => locals[:model]})
		%div{:class => 'container'}
			= haml(:'partials/artist_partial',:layout=>false,:locals => {:model => locals[:model]})
			%h2 Releases
			- locals[:model].releases.each do |release|
				%p
					%a(href="/release/#{release.id}") #{release.artist.name} - #{release.title}

